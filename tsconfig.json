{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core-framework/*": ["core-framework/*"],
      "@apps/*": ["apps/*"]
    },
    "types": ["node", "playwright/test"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
